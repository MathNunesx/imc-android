<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/homepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- BOTÃO DO INICIO -->

    <Button
        android:id="@+id/paginaInicio"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:backgroundTint="#2A2F33"
        android:drawableRight="@drawable/house_solid"
        android:drawableTint="#237FCF"
        android:text="Home"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homepage"
        android:onClick="abreHomepage"
        />

    <!-- BOTÃO DO IMC -->

    <Button
        android:id="@+id/paginaImc"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:backgroundTint="#2A2F33"
        android:drawableRight="@drawable/weight_hanging_solid"
        android:drawableTint="#237FCF"
        android:text="IMC"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paginaInicio"
        android:onClick="abreIMCpage"
        />

    <!-- BOTÃO DA MÉDIA -->

    <Button
        android:id="@+id/paginaMedia"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#2A2F33"
        android:drawableRight="@drawable/book_solid"
        android:drawableTint="#237FCF"
        android:text="Média"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paginaImc"
        android:onClick="abreMediapage"
        />

    <!-- BOTÃO DO SOBRE -->

    <Button
        android:id="@+id/paginaSobre"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#2A2F33"
        android:drawableRight="@drawable/circle_user_solid"
        android:drawableTint="#237FCF"
        android:text="Sobre"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paginaMedia"
        android:onClick="abreSobrepage"
        />


</androidx.constraintlayout.widget.ConstraintLayout>